{
  "manifest_version": 2,
  "name": "Narwallets V4",
  "description": "NEAR protocol wallet",
  "version": "4.0.1",
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "page": "background/background.html",
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "alarms"
  ],
  "icons": {
    "48": "icons/logo_48.png",
    "128": "icons/logo_128.png"
  },
  "content_scripts": [
    {
        "matches": ["https://*/*"],
        "js": ["dist/content-script.js"],
        "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "dist/content-script.js"
      ],
      "run_at": "document_start"
  }
  ]
}