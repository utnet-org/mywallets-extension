{
  "manifest_version": 2,

  "name": "Narwallets",
  "description": "NEAR protocol multi-account wallets",
  "version": "1.0",

  "browser_action": {
    "default_popup": "index.html"
  },

  "background": {
    "scripts": [
      "background/background.js"
    ],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent",
    "storage",
    "notifications", 
    "alarms"
  ],

  "options_ui": {
    "page": "options/options.html",
    "chrome_style": false
  },

  "icons": {
    "48": "icons/logo_48.png",
    "128": "icons/logo_128.png"
  }
 
}